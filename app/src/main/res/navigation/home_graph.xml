<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/homeFrag">


    <fragment
        android:id="@+id/homeFrag"
        android:name="db.poorya.namavatest.presentation.main.HomeFragment"
        tools:layout="@layout/frag_home">
        <action
            android:id="@+id/action_homeFrag_to_detailFrag"
            app:destination="@id/detailFrag"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/detailFrag"
        android:name="db.poorya.namavatest.presentation.detail.DetailFragment"
        tools:layout="@layout/frag_detail">
        <argument
            android:name="video"
            app:argType="db.poorya.namavatest.domain.model.local.VideoModel" />
        <action
            android:id="@+id/action_detailFrag_to_dplayerFrag"
            app:destination="@id/dplayerFrag"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/dplayerFrag"
        android:name="db.poorya.namavatest.presentation.player.PlayerFragment"
        tools:layout="@layout/frag_player">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>

</navigation>