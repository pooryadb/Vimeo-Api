<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="app.theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FF6200EE</item>
        <item name="colorPrimaryVariant">#FF3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#FF5722</item>
        <item name="colorSecondaryVariant">#AF2E06</item>
        <item name="colorOnSecondary">#000000</item>

        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#101010</item>

        <item name="colorError">#CA4436</item>
        <item name="colorOnError">#FFFFFF</item>

        <item name="android:colorBackground">@color/backgroundColorLight</item>
        <item name="colorOnBackground">#101010</item>

        <item name="android:textColor">#101010</item>
        <item name="android:textColorHint">#858585</item>

        <item name="colorControlNormal">#505050</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="colorControlHighlight">#e0e0e0</item>

        <!-- custom color-->
        <item name="colorGlass">#29000000</item>

        <!-- Status bar & navigation color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <!-- Customize your theme here. -->

        <!-- settings -->
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">none</item>
        <item name="android:colorEdgeEffect">?android:colorError</item>
        <item name="android:windowAnimationStyle">@style/animation.fade</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="fontFamily">@font/font_family</item>
        <item name="android:textAppearance">@style/txt.h1</item>
        <item name="android:fontFamily">@font/font_family</item>
        <!--        <item name="android:gravity">right</item>-->
        <!--settings -->

        <item name="bottomSheetDialogTheme">@style/app.theme.sheet</item>
    </style>


    <style name="app.theme.dialog" parent="app.theme">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="app.theme.sheet" parent="app.theme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.MaterialComponents.BottomSheetDialog
        </item>
        <item name="bottomSheetStyle">@style/bottom.sheet.style</item>
    </style>

    <style name="app.theme.toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/txt.h4.bold</item>
        <item name="subtitleTextAppearance">@style/txt.h3.medium</item>
        <item name="popupTheme">@style/app.theme.toolbar.popup</item>
    </style>

    <style name="app.theme.toolbar.popup">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:background">?colorSurface</item>
    </style>


</resources>